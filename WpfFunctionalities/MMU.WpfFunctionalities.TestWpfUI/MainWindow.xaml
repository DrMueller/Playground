<Window x:Class="MMU.WpfFunctionalities.TestWpfUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMU.WpfFunctionalities.TestWpfUI"
        xmlns:s="clr-namespace:MMU.WpfFunctionalities.Animations;assembly=MMU.WpfFunctionalities"
        mc:Ignorable="d"
        x:Name="t"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80" />
            <Setter Property="Height" Value="30" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="0,0,0,10" />
        </Style>
    </Window.Resources>
    

    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="btnSpinningBeachBall" Content="Beachball" Click="btnSpinningBeachBall_Click" />
            <Button x:Name="btnDataGridExtended" Content="Datagrid" Click="btnDataGridExtended_Click" />
        </StackPanel>
    </Grid>
    

</Window>
